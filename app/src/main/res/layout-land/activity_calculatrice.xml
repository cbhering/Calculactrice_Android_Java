<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1717"
    android:backgroundTint="@color/colorArrierePlanCalc"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight=".25"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resultat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/arrierePlanCristauxLiquide"
            android:fontFamily="@font/digital"
            android:gravity="center|end"
            android:padding="10sp"
            android:text="@string/cristauxLiquide"
            android:textColor="@color/cristauxLiquideTexte"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".75"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingTop="30dp">

        <LinearLayout
            android:id="@+id/linear22"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEffacer"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".81"
                android:background="@color/couleurBtn"
                android:padding="10dp"
                android:text="@string/btnEffacer"
                android:textColor="@color/couleurBtnTexte"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnAddition"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".26"
                android:background="@color/couleurBtn"
                android:padding="10dp"
                android:text="@string/btnPlus"
                android:textColor="@color/couleurBtnTexte"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear23"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/couleurBtn"
                android:padding="10dp"
                android:text="@string/btn7"
                android:textColor="@color/couleurBtnTexte"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/couleurBtn"
                android:padding="10dp"
                android:text="@string/btn8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/couleurBtn"
                android:padding="10dp"
                android:text="@string/btn9"
                android:textColor="@color/couleurBtnTexte"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnSous"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/couleurBtn"
                android:padding="10dp"
                android:text="@string/btnSous"
                android:textColor="@color/couleurBtnTexte"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear24"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/couleurBtn"
                android:padding="10dp"
                android:text="@string/btn4"
                android:textColor="@color/couleurBtnTexte"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/couleurBtn"
                android:padding="10dp"
                android:text="@string/btn5"
                android:textColor="@color/couleurBtnTexte"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/couleurBtn"
                android:padding="10dp"
                android:text="@string/btn6"
                android:textColor="@color/couleurBtnTexte"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnMult"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/couleurBtn"
                android:padding="10dp"
                android:text="@string/btnMult"
                android:textColor="@color/couleurBtnTexte"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear25"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/couleurBtn"
                android:padding="10dp"
                android:text="@string/btn1"
                android:textColor="@color/couleurBtnTexte"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/couleurBtn"
                android:padding="10dp"
                android:text="@string/btn2"
                android:textColor="@color/couleurBtnTexte"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/couleurBtn"
                android:padding="10dp"
                android:text="@string/btn3"
                android:textColor="@color/couleurBtnTexte"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/couleurBtn"
                android:padding="10dp"
                android:text="@string/btnDiv"
                android:textColor="@color/couleurBtnTexte"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear26"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".24"
                android:background="@color/couleurBtn"
                android:padding="10dp"
                android:text="@string/btnZero"
                android:textColor="@color/couleurBtnTexte"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnPoint"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".24"
                android:background="@color/couleurBtn"
                android:padding="10dp"
                android:text="@string/btnPoint"
                android:textColor="@color/couleurBtnTexte"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnEgal"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".49"
                android:background="@color/couleurBtn"
                android:padding="10dp"
                android:text="@string/btnEgal"
                android:textColor="@color/couleurBtnTexte"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>